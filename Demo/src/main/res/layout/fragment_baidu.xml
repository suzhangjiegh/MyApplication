<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context="com.szj.demo.frag.BaiduFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fg_baidu_plan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fg_baidu_top_margin"
            android:layout_weight="1"
            android:background="@drawable/light_blue_border_corner"
            android:gravity="center"
            android:padding="@dimen/fg_baidu_top_margin"
            android:text="@string/fg_baidu_plan"
            android:textColor="@color/black"
            android:textSize="@dimen/fg_baidu_font" />

        <TextView
            android:id="@+id/fg_baidu_nav"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fg_baidu_top_margin"
            android:layout_weight="1"
            android:background="@drawable/light_blue_border_corner"
            android:gravity="center"
            android:padding="@dimen/fg_baidu_top_margin"
            android:text="@string/fg_baidu_nav"
            android:textColor="@color/black"
            android:textSize="@dimen/fg_baidu_font" />

        <TextView
            android:id="@+id/fg_baidu_pano"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fg_baidu_top_margin"
            android:layout_weight="1"
            android:background="@drawable/light_blue_border_corner"
            android:gravity="center"
            android:padding="@dimen/fg_baidu_top_margin"
            android:text="@string/fg_baidu_pano"
            android:textColor="@color/black" />
    </LinearLayout>

    <com.baidu.mapapi.map.MapView
        android:id="@+id/fg_baidu_mv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true" />

</LinearLayout>
